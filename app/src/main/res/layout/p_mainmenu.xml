<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="fill_parent"
              android:layout_height="match_parent" android:background="#fafffb">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                  android:orientation="horizontal"
                  android:layout_width="fill_parent"
                  android:layout_height="64dip" android:layout_marginBottom="10dip"
                  android:layout_gravity="center" android:background="#3399FF">
        <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/MainMenu_Icon" android:src="@drawable/sfa_home" android:layout_gravity="center"
                android:layout_marginLeft="5dip"/>
        <TextView
                android:layout_width="fill_parent"
                android:layout_height="64dip"
                android:text="MENU UTAMA"
                android:id="@+id/txtMainMenuUtama" android:textSize="25sp"
                android:textColor="@android:color/white" android:textStyle="bold"
                android:gravity="center_vertical|left" android:layout_gravity="center" android:layout_marginLeft="10dip"
                />
    </LinearLayout>

    <ListView
            android:id="@android:id/list"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"/>

    <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">
        <LinearLayout  xmlns:android="http://schemas.android.com/apk/res/android"
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                       android:layout_alignParentBottom="true"
                       android:layout_gravity="bottom"
                       android:paddingTop="3dip" android:orientation="horizontal"
                       android:gravity="center_horizontal|left" android:paddingBottom="3dip"
                       android:background="#3399FF" android:id="@+id/linearLayout">


            <TextView
                    android:id="@+id/OperatorCode"
                    android:text="USER :"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentBottom="true" android:layout_marginLeft="5dip"
                    android:layout_marginBottom="5dip" android:textStyle="bold" android:textColor="@android:color/white"/>
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="UserName"
                    android:id="@+id/MainMenu_TxtUser" android:layout_toRightOf="@+id/OperatorCode"
                    android:layout_alignParentBottom="true" android:textStyle="bold"
                    android:textColor="@android:color/white" android:layout_marginBottom="5dip"
                    android:layout_marginLeft="2dip" android:layout_marginRight="5dip"/>
            <TextView
                    android:id="@+id/MainMenu_TxtTime"
                    android:text="LoginTime"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentBottom="true" android:layout_marginRight="5dip"
                    android:layout_marginBottom="5dip" android:textStyle="bold" android:textColor="@android:color/white"
                    android:layout_gravity="right"/>

        </LinearLayout>


    </RelativeLayout>

</LinearLayout>

