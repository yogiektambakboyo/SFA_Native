<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dip" android:layout_marginBottom="2dip" android:paddingTop="2dip"
        android:paddingBottom="2dip" android:background="@android:color/white" android:alpha="0.9">

        <LinearLayout
            android:layout_width="280dip"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:id="@+id/QPFaktur_Faktur"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:textColor="#000000"
                android:textSize="16sp"
                android:paddingTop="6dip"
                android:paddingBottom="2dip"
                android:layout_marginLeft="5dip" android:text="Faktur" android:textStyle="bold"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/QPFaktur_Kodenota"
                android:visibility="gone" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" android:layout_marginLeft="7dip">
                <TextView
                    android:layout_width="80dip"
                    android:layout_height="wrap_content"
                    android:text="Total Bayar     :"
                    android:id="@+id/TextView" android:layout_gravity="left|center_vertical" android:textSize="12sp"
                    android:textColor="#3399FF"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Total Bayar"
                    android:layout_marginLeft="5dip"
                    android:id="@+id/QPFaktur_TotalBayar" android:layout_gravity="left|center_vertical" android:textSize="12sp"
                    android:textColor="#3399FF" android:textStyle="bold"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" android:layout_marginLeft="7dip">
                <TextView
                    android:layout_width="80dip"
                    android:layout_height="wrap_content"
                    android:text="Pembayaran  :"
                    android:layout_gravity="left|center_vertical" android:textSize="12sp"
                    android:textColor="#3399FF"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Pembayaran"
                    android:layout_marginLeft="5dip"
                    android:id="@+id/QPFaktur_Pembayaran" android:layout_gravity="left|center_vertical"
                    android:textColor="#3399FF" android:textStyle="bold" android:textSize="12sp"/>
            </LinearLayout>

        </LinearLayout>


    </LinearLayout>

</LinearLayout>